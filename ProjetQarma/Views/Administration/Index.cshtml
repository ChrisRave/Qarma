<!-- Modal compte-->
<div class="modal fade" id="compte" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Formulaire nouveau compte</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p class="lead">Saisir les informations de l'utilisateur</p>
           <form>
            <div class="mb-3">
                <label for="first-name" class="col-form-label">
                    Nom
                </label>
                <input type="text" class="form-control" id="first-name">
            </div>
            <div class="mb-3">
                <label for="last-name" class="col-form-label">
                    Prénom
                </label>
                <input type="text" class="form-control" id="last-name">
            </div>
            <div class="mb-3">
                <label for="last-name" class="col-form-label">
                    Mail
                </label>
                <input type="text" class="form-control" id="last-name">
            </div>
            <div class="mb-3">
                <label for="last-name" class="col-form-label">
                    Appartement
                </label>
                <input type="text" class="form-control" id="last-name">
            </div>
           </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
              <button type="button" class="btn btn-primary">Valider</button>
            </div>
      </div>
    </div>
  </div>




<!-- Modal actu-->
<div class="modal fade" id="actu" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Formulaire nouvelle actu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p class="lead">Créer une nouvelle actu</p>
       <form>
        <div class="mb-3">
            <label for="first-name" class="col-form-label">
                Titre
            </label>
            <input type="text" class="form-control" id="first-name">
        </div>
        <div class="mb-3">
            <label for="Message" class="col-form-label">
                Message
            </label>
            <textarea id="Message" class="form-control" id="comment"> </textarea>
        </div>
       </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
          <button type="button" class="btn btn-primary">Valider</button>
        </div>
      </div>
    </div>
  </div>

    
