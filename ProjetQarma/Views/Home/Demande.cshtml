@model ProjetQarma.ViewModels.ServicePropositionViewModel


@{
    Layout = "_layoutAccueil";
    ViewBag.Title = "Demande";
}
<!--*****Les demandes et les propositions*****-->

<div class="row" align="center">
    <div class="col-md-6" style="border-radius: 8px;" align="center">
        <div class="row" align="center">
            @using (Html.BeginForm("Proposition", "Service", FormMethod.Get)) //Index est la méthode, Service est le controleur, searchstring est le paramètre
            {
                <div class="row" align="center">
                    <div class="col-md-11 offset-md-1" style="border-radius: 8px;">
                        <div class="row bordureAucune">
                            <div class="col-md-8 bordureAucune">
                                <div><input class="form-control" id="floatingInput" placeholder="Rechercher Proposition" style=" height: 35px; width: 100%;"></div>
                            </div>

                            <div class="col-md-4 bordureAucune">
                                <button class="btn btn-primary btn-lg me-md-5" style="width: 100%; height: 35px; margin-top: 0px; font-size: 10px ">Rechercher</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row overflow-hidden" align="center">
            <div class="col-md-10 offset-md-2 bordureAucune" style="border-radius: 8px;">
                @foreach (var proposition in Model.Propositions)
                {
                    <div class="card col-8 m-7" style="width: 70%; border: 3px solid #3276726a; background-color: #3276726a; margin-bottom: 2px; " align="center"  >
                        <a href=@("/service/PropositionDetail/" + proposition.Id) class="btn btn-primary stretched-link"><h6> @proposition.Titre</h6></a>
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <div class="my-1">
                                    <img src="@proposition.ImagePath" width="100" height="75" style="border-radius: 8px;" />
                                </div>
                                <div class="card-subtitle mb-1 text-muted " style="font-size: 13px; color: #327672;"><strong>Coût du service : @proposition.MontantBisous</strong></div>
                                <div class="card-subtitle mb-1 text-muted " style="font-size: 13px; color: #327672;"><strong>Type de service : @proposition.TypeService</strong></div>
                                <div class="card-text" style="font-size: 13px; color: ghostwhite;"><strong> @proposition.Description </strong></div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    <div class="col-md-6" style="border-radius: 8px;" align="center">
        <div class="row " align="center">

                @using (Html.BeginForm("Index", "Service", FormMethod.Get)) //Index est la méthode, Service est le controleur, searchstring est le paramètre
                {
                    <div class="row" align="center">
                        <div class="col-md-11 offset-md-1" style="border-radius: 8px;">
                            <div class="row bordureAucune">
                                <div class="col-md-8 bordureAucune">
                                    <div><input class="form-control" id="floatingInput" placeholder="Rechercher Demande" style=" height: 35px; width: 100%;"></div>
                                </div>

                                <div class="col-md-4 bordureAucune">
                                    <button class="btn btn-primary btn-lg me-md-5" style="width: 100%; height: 35px; margin-top: 0px; font-size: 10px ">Rechercher</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        <div class="row overflow-hidden" align="center">
            <div class="col-md-10 offset-md-2 bordureAucune" style="border-radius: 8px;">

                @foreach (var service in Model.Services)

                {
                    <div class="card col-8 m-7" style="width: 70%; border: 3px solid #3276726a; background-color: #3276726a; margin-bottom: 2px; " align="center">
                        <a href=@("/service/ServiceDetail/"+service.Id) class="btn btn-primary stretched-link"><h6> @service.Titre</h6></a>
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>

                                <div class="my-1">
                                    <img src="@service.ImagePath" width="100" height="75" style="border-radius: 8px;" />
                                </div>
                                <div class="card-subtitle mb-1 text-muted " style="font-size: 13px; color: #327672;"><strong>Coût du service : @service.MontantBisous</strong></div>
                                <div class="card-subtitle mb-1 text-muted " style="font-size: 13px; color: #327672;"><strong>Type de service : @service.TypeService</strong></div>
                                <div class="card-text" style="font-size: 13px; color: ghostwhite;"><strong> @service.Description </strong></div>


                            </div>

                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>





