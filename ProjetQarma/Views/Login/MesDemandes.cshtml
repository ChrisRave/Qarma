
@model ProjetQarma.ViewModels.ServicePropositionViewModel
<!DOCTYPE html>
<html lang="fr">
<head>
    <title> Mes demandes</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/style1.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md" style="height:120px;">
        <div class="containerHeader" style="height:160px;">
            <div class="row">
                <!-- La partie Gauche LOGO-->

                <div class="col-md-2 bordureAucune">
                    <div class="row">
                        <div class="col-md-8 offset-md-3 bordureAucune">
                            <a href="#">
                                <img src="/photos/QarmaLogo.png" width="60%" id="logo" onclick="location.href='@Url.Action("Demande", "Home")';">
                                <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Description plateforme Qarma-->
                <div class="col-md-7 caractereDescription text-center bordureAucune">
                    <div class="row">
                        <div class="col-md-10 offset-md-1 bordureAucune">
                            <h4 class="couleur_verte"> <strong> Qarma</strong></h4>
                            <h5 class="couleur_bleueQarma"> <strong>La plateforme d'échange de biens et de services entre voisins</strong> </h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 caractereDescription bordureAucune">

                    <!-- Se connecter-->
                    @if (!User.Identity.IsAuthenticated)
                    {
                        @using (Html.BeginForm("Index", "Login"))
                        {
                            <div class="row">
                                <div class="col-md-8 offset-md-4 bordureAucune">
                                    <div class="collapse navbar-collapse" id="main-navigation">
                                        <nav class="nav flex-column navbar-nav">
                                            <div class="form-floating mb-10 navbar-nav">
                                                <div><input type="email" name="Utilisateur.Mail" class="form-control" id="floatingInput" placeholder="nom@exemple.com"></div>
                                                <div><input type="password" name="Utilisateur.Password" class="form-control" id="floatingPassword" placeholder="Mot de passe"></div>
                                            </div>
                                            <div class="d-grid gap-12 d-md-flex justify-content-md-end navbar-nav" align="center">
                                                <button class="btn btn-secondary  me-md-8" type="submit" style=" width: 100%;">Déjà membre? Se connecter</button>
                                            </div>
                                            <div class="d-grid gap-12 d-md-flex justify-content-md-end navbar-nav" align="center">
                                                <button class="btn btn-light me-md-8" type="button" style=" width: 100%; color: #539532;"> <strong> Nouveau ici? Rejoignez-nous!</strong></button>
                                            </div>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-10 offset-md-0 bordureAucune">
                                <div class="collapse navbar-collapse" id="main-navigation" align="center">
                                    <nav class="nav flex-column navbar-nav">
                                        <div class="row">
                                            <div class="col-md-12 bordureAucune couleur_verte" style="font-size:18px ;">
                                                <strong>
                                                    Bonjour ! <strong class="couleur_bleueQarma"> @User.FindFirst("Prenom").Value @User.FindFirst("Nom").Value</strong>
                                                </strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-2 bordureAucune">

                                            </div>
                                            <div class="col-md-3 bordureAucune">
                                                <a href="#">
                                                    <img src="/photos/iconprofil.png" width="80%" id="logo" onclick="location.href='@Url.Action("Index", "Login")';">
                                                    <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
                                                        <span class="navbar-toggler-icon"></span>
                                                    </button>
                                                </a>
                                            </div>
                                            <div class="col-md-3 bordureAucune">
                                                <a href="#">
                                                    <img src="/photos/iconmessage.png" width="80%" id="logo" onclick="location.href='@Url.Action("Landing", "Home")';">
                                                    <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
                                                        <span class="navbar-toggler-icon"></span>
                                                    </button>
                                                </a>
                                            </div>
                                            <div class="col-md-3 bordureAucune">
                                                <a href="#">
                                                    <img src="/photos/iconnotif.png" width="80%" id="logo" onclick="location.href='@Url.Action("Landing", "Home")';">
                                                    <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
                                                        <span class="navbar-toggler-icon"></span>
                                                    </button>
                                                </a>
                                            </div>
                                            <div class="col-md-1 bordureAucune">

                                            </div>
                                        </div>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/css/style1.css">


    <div class="containerBody">

        <!--La prtie du WEB fonctionalité-->
        <div class="row bordureAucune">
            <!--Partie body-->
            <!--Le gros bloc de la page-->

            <div class="col-md-6  bordureAucune overflow-hidden ">
                <h3 class="page-section-heading text-center text-uppercase text-secondary mb-0 couleur_bleueQarma">Mes offres</h3>
                <div class="row bordureAucune">
                    <div class="col-md-11 offset-md-1 bordureAucune" style="border-radius: 8px;" align="center">
                        <div class="row bordureAucune">

                            @foreach (var proposition in Model.Propositions)
                            {

                                string modifierLien = "/Service/ModifierProposition/" + proposition.Id;
                                string supprimerLien = "/Service/SupprimerProposition/" + proposition.Id;

                                <div class="card col-5 m-4" style="width: 25%; border: 3px solid #3276726a; background-color: #3276726a; ">


                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <div>
                                            <h6 class="card-title" style="color: #05443ffb; ">  @proposition.Titre</h6>
                                            <div class="my-2">
                                                <img src="@proposition.ImagePath" width="100" height="75" style="border-radius: 8px;" />
                                            </div>
                                            <div class="card-subtitle mb-1 text-muted " style="font-size: 14px; color: #327672;"><strong>Coût du service :</strong> @proposition.MontantBisous</div>
                                            <div class="card-text" style="font-size: 14px; color: ghostwhite;" align="left"><strong>@proposition.Description</strong></div>


                                        </div>

                                    </div>
                                    <div style="font-size: 10px;">
                                        <strong>
                                            <a href=@modifierLien class="card-link " style="color: #05443ffb;">Modifier</a>
                                            <a href=@supprimerLien class="card-link" onclick="return confirm('Confirmer la suppression')" style="color: #05443ffb;">Supprimer</a>
                                        </strong>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6  bordureAucune  overflow-hidden">
                <h3 class="page-section-heading text-center text-uppercase text-secondary mb-0 couleur_bleueQarma">Mes demandes</h3>
                <div class="row bordureAucune">
                    <div class="col-md-11 offset-md-1 bordureAucune" style="border-radius: 8px;" align="center">
                        <div class="row bordureAucune">
                            @foreach (var service in Model.Services)
                            {
                                string modifierLien1 = "/Service/Modifier/" + service.Id;
                                string supprimerLien1 = "/Service/Supprimer/" + service.Id;

                                <div class="card col-5 m-4" style="width: 25%; border: 3px solid #3276726a; background-color: #3276726a;">
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <div>
                                            <h6 class="card-title" style="color: #05443ffb ">  @service.Titre</h6>
                                            <div class="my-2">
                                                <img src="@service.ImagePath" width="100" height="75" style="border-radius: 8px;" />
                                            </div>
                                            <div class="card-subtitle mb-1 text-muted " style="font-size: 14px; color: #327672;"><strong>Coût du service :</strong> @service.MontantBisous</div>
                                            <div class="card-text" style="font-size: 14px; color: ghostwhite;" align="left"><strong>@service.Description</strong></div>
                                        </div>
                                    </div>
                                    <div style="font-size:10px">
                                        <strong>
                                            <a href=@modifierLien1 class="card-link" style="color: #05443ffb;">Modifier</a>
                                            <a href=@supprimerLien1 class="card-link" onclick="return confirm('Confirmer la suppression')" style="color: #05443ffb;">Supprimer</a>
                                        </strong>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- **********FOOTER*************-->
    <footer class="text-center ">
        <!-- Grid container -->
        <div class="containerFooter pt-20">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-10 offset-md-1 bordureAucune">
                            <!--Ligne 2 vide-->
                            <!--Espace vide-->
                        </div>
                    </div>
                    <!-- Les logos linkedIn Intsagram FB Twitter-->
                    <div class="row">
                        <div class="col-md-3">
                            <img src="~/photos/facebook.png" width="40%" id="logo">
                        </div>
                        <div class="col-md-3">
                            <img src="~/photos/linkedin.png" width="40%" id="logo">
                        </div>
                        <div class="col-md-3">
                            <img src="~/photos/twitter.png" width="40%" id="logo">
                        </div>
                        <div class="col-md-3">
                            <img src="~/photos/instagram.png" width="40%" id="logo">
                        </div>
                    </div>
                </div>
                <!-- Copyright -->
                <!-- -->
                <div class="col-md-6 bordureAucune">
                    <div class="text-center couleur_bleueSoliDev p-40">
                        <strong> SoliDev © 2022  </strong><br>
                        <strong> solidev@contact.com </strong>
                    </div>
                </div>
                <!-- Logo SoliDev-->
                <div class="col-md-3 ">
                    <img src="/photos/SoliDevLogo.png" width="20%" id="logo">
                </div>

            </div>
        </div>
        <!-- Copyright -->
    </footer>
</body>
</html>

