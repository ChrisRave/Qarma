
<!DOCTYPE html>
<html lang="fr">
<head>
    <title>Interface proposition</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/style1.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md" style="height:120px;">
        <div class="containerHeader" style="height:160px;">
            <div class="row">
                <!-- La partie Gauche LOGO-->

                <div class="col-md-2 bordureAucune">
                    <div class="row">
                        <div class="col-md-8 offset-md-3 bordureAucune">
                            <a href="#">
                                <img src="/photos/QarmaLogo.png" width="60%" id="logo" onclick="location.href='@Url.Action("Demande", "Home")';">
                                <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Description plateforme Qarma-->
                <div class="col-md-7 caractereDescription text-center bordureAucune">
                    <div class="row">
                        <div class="col-md-10 offset-md-1 bordureAucune">
                            <h4 class="couleur_verte"> <strong> Qarma</strong></h4>
                            <h5 class="couleur_bleueQarma"> <strong>La plateforme d'échange de biens et de services entre voisins</strong> </h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 caractereDescription bordureAucune">

                    <!-- Se connecter-->
                    @if (!User.Identity.IsAuthenticated)
                    {
                        @using (Html.BeginForm("Index", "Login"))
                        {
                            <div class="row">
                                <div class="col-md-8 offset-md-4 bordureAucune">
                                    <div class="collapse navbar-collapse" id="main-navigation">
                                        <nav class="nav flex-column navbar-nav">
                                            <div class="form-floating mb-10 navbar-nav">
                                                <div><input type="email" name="Utilisateur.Mail" class="form-control" id="floatingInput" placeholder="nom@exemple.com"></div>
                                                <div><input type="password" name="Utilisateur.Password" class="form-control" id="floatingPassword" placeholder="Mot de passe"></div>
                                            </div>
                                            <div class="d-grid gap-12 d-md-flex justify-content-md-end navbar-nav" align="center">
                                                <button class="btn btn-secondary  me-md-8" type="submit" style=" width: 100%;">Déjà membre? Se connecter</button>
                                            </div>
                                            <div class="d-grid gap-12 d-md-flex justify-content-md-end navbar-nav" align="center">
                                                <button class="btn btn-light me-md-8" type="button" style=" width: 100%; color: #539532;"> <strong> Nouveau ici? Rejoignez-nous!</strong></button>
                                            </div>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-10 offset-md-0 bordureAucune">
                                <div class="collapse navbar-collapse" id="main-navigation" align="center">
                                    <nav class="nav flex-column navbar-nav">
                                        <div class="row">
                                            <div class="col-md-12 bordureAucune couleur_verte" style="font-size:18px ;">
                                                <strong>
                                                    Bonjour ! <strong class="couleur_bleueQarma"> @User.FindFirst("Prenom").Value @User.FindFirst("Nom").Value</strong>
                                                </strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-2 bordureAucune">

                                            </div>
                                            <div class="col-md-3 bordureAucune">
                                                <a href="#">
                                                    <img src="/photos/iconprofil.png" width="80%" id="logo" onclick="location.href='@Url.Action("Index", "Login")';">
                                                    <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
                                                        <span class="navbar-toggler-icon"></span>
                                                    </button>
                                                </a>
                                            </div>
                                            <div class="col-md-3 bordureAucune">
                                                <a href="#">
                                                    <img src="/photos/iconmessage.png" width="80%" id="logo" onclick="location.href='@Url.Action("Landing", "Home")';">
                                                    <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
                                                        <span class="navbar-toggler-icon"></span>
                                                    </button>
                                                </a>
                                            </div>
                                            <div class="col-md-3 bordureAucune">
                                                <a href="#">
                                                    <img src="/photos/iconnotif.png" width="80%" id="logo" onclick="location.href='@Url.Action("Landing", "Home")';">
                                                    <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
                                                        <span class="navbar-toggler-icon"></span>
                                                    </button>
                                                </a>
                                            </div>
                                            <div class="col-md-1 bordureAucune">

                                            </div>
                                        </div>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/css/style1.css">
    <header class=" header containerHeader">


        <!-- *******MAIN *******-->
    </header>
    <div>
        <div class="containerBody">
            <div class="row">
                <div class="col-md-10 offset-md-1 bordureAucune">
                  
                </div>
            </div>
            <!--La prtie du WEB fonctionalité-->
            <div class="row">
                <!-- La partie Gauche-->
                <div class="col-md-2 bordureBleue1" style="border-radius: 8px;">
                    <div class="row" align="center">
                        <div class="col-md-12 offset-md-0 bordureAucune">
                            <div class="row bordureAucune">
                                <div class="couleur_bleueQarma" style="font-size:20px"><strong>@User.FindFirst("Prenom").Value @User.FindFirst("Nom").Value </strong></div>
                            </div>
                            <div class="row bordureAucune">
                                <div style="font-size:20px; color:ghostwhite"><strong>Solde de bisous</strong> : @(new projetQarma.Controllers.UtilisateurController().getSoldeBisous(User.Identity.Name))</div>
                            </div>
                            <div class="row bordureAucune">
                                <div style="font-size: 20px; color: ghostwhite"><strong> Badges </strong>: @(new projetQarma.Controllers.UtilisateurController().getSoldeQarma(User.Identity.Name))</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10 offset-md-1 bordureAucune">

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12 offset-md-0 bordureAucune">
                            <button class="btn btn-primary btn-lg" style=" width: 100%;" onclick="location.href='@Url.Action("Charte", "Accueil")';">Charte </button>

                            <button class="btn btn-primary btn-lg me-md-5" style=" width: 100%;" onclick="location.href='@Url.Action("FAQ", "Accueil")';">FAQ</button>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-12 offset-md-0 ">
                            <button class="btn btn-secondary btn-lg me-md-5" style=" width: 100%;" type="button" onclick="location.href='@Url.Action("Deconnexion","Login")';"><div style="font-size:16px"> Se déconnecter</div></button>

                        </div>
                    </div>
                </div>
                <div class="col-md-1 bordureAucune">
                    
                </div>
                <!--**********Partie body**************-->

                <div class="col-md-9  bordureaucune" style="border-radius: 8px;">
                    <div id="contenu">
                        @RenderBody()
                    </div>
                </div>



               




        </div>
        <div class="row">
            <div class="col-md-10 offset-md-1 bordureAucune">
             
            </div>
        </div>
    </div>


    <!-- **********FOOTER*************-->
    <footer class="text-center ">
        <!-- Grid container -->
        <div class="containerFooter pt-20">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-10 offset-md-1 bordureAucune">
                            <!--Ligne 2 vide-->
                            <!--Espace vide-->
                        </div>
                    </div>
                    <!-- Les logos linkedIn Intsagram FB Twitter-->
                    <div class="row">
                        <div class="col-md-3">
                            <img src="~/photos/facebook.png" width="40%" id="logo">
                        </div>
                        <div class="col-md-3">
                            <img src="~/photos/linkedin.png" width="40%" id="logo">
                        </div>
                        <div class="col-md-3">
                            <img src="~/photos/twitter.png" width="40%" id="logo">
                        </div>
                        <div class="col-md-3">
                            <img src="~/photos/instagram.png" width="40%" id="logo">
                        </div>
                    </div>
                </div>
                <!-- Copyright -->
                <!-- -->
                <div class="col-md-6 bordureAucune">
                    <div class="text-center couleur_bleueSoliDev p-40">
                        <strong> SoliDev © 2022  </strong><br>
                        <strong> solidev@contact.com </strong>
                    </div>
                </div>
                <!-- Logo SoliDev-->
                <div class="col-md-3 ">
                    <img src="~/photos/SolidevLogo.png" width="20%" id="logo">
                </div>

            </div>
        </div>
