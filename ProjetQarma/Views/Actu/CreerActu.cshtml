@model ProjetQarma.Models.Actu

@{
    Layout = "_layoutProposition";
    ViewBag.Title = "CréerActu";
} 

<<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Actualités</h2>


<!-- Icon Divider-->
<div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
</div>


<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
             <div ><h4>Créer une actualité</h4></div>
                
            
         @using (Html.BeginForm("CreerActu", "Actu", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Titre, new { @class = "form-control", placeholder = "Titre " })
                @Html.LabelFor(model => model.Titre)
                @Html.ValidationMessageFor(model => model.Titre)
            </div>
             <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Categorie, new { @class = "form-control", placeholder = "Catégorie " })
                @Html.LabelFor(model => model.Categorie)
                @Html.ValidationMessageFor(model => model.Categorie)
            </div>
             <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Description " })
                @Html.LabelFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
       
        
        @Html.HiddenFor(model=> model.ImagePath)
                    <div class="d-flex flex-row my-3">
                        <div class="mb-3 d-flex">
                            <div>
                                @Html.LabelFor(model => model.Image, new { id = "imageLabel", @style = "text-align:center;" })
                                @Html.TextBoxFor(model => model.Image, new { placeholder = "Description", @type = "file" })
                            </div>
                        </div>
                       
                    </div>
        <button class="btn btn-primary btn-xl" type="submit" href="/Actu/Index.cshtml">Valider</button>
        }
    </div>
</div>