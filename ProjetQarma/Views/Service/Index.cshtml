@model List<ProjetQarma.Models.Service>
    

@{
     Layout = "_layoutAcceuil";
    ViewBag.Title = "ListeService";
}

<h5 class="page-section-heading text-center text-uppercase text-secondary mb-0">Catalogue des demandes de services</h5>
		<!-- Icon Divider-->
		<div class="divider-custom">
			<div class="divider-custom-line"></div>
			<div class="divider-custom-icon"><i class="fas fa-star"></i></div>
			<div class="divider-custom-line"></div>
			@using (Html.BeginForm("Index", "Service", FormMethod.Get )) //Index est la méthode, Service est le controleur, searchstring est le paramètre
                {
                    <div class="form-floating mb-3">
                        @Html.TextBox( "searchString") 
                        @Html.Label("")
                     <input type="submit" value="rechercher ">  
                    </div>
				}
		</div>
		
		<div class="row justify-content-start">

			@foreach (var service in Model)
			{
				string modifierLien = "/Service/Modifier/" + service.Id;
				string supprimerLien = "/Service/Supprimer/" + service.Id;
				<div class="card col-6 m-5" style="width: 18rem;">
					<div class="card-body d-flex flex-column justify-content-between">
                        <div>
							<p class="card-text">@service.Titre</p>
                            <div class="my-3">
                                <img src="@service.ImagePath" width="225" height="200" />
                            </div>
                            <h6 class="card-subtitle mb-2 text-muted">Coût du service : @service.MontantBisous</h6>
                            <h6 class="card-subtitle mb-2 text-muted">@service.TypeService</h6>
                            <p class="card-text">@service.Description</p>

                        </div>
						@Html.ActionLink("Répondre à la demande", "Creer" , "Service")
					 <a href=@modifierLien class="card-link">Modifier</a>	
					 <a href=@supprimerLien class="card-link" onclick="return confirm('Confirmer la suppression')">Supprimer</a> 
					</div>
				</div>
			}


			@Html.ActionLink("Demander un service", "Creer" , "Service")
		</div>
