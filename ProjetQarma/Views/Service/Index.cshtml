@model List<ProjetQarma.Models.Service>

@{

    Layout = "_layoutAccueil";
    ViewBag.Title = "ListeService";


}



<!-- Icon Divider-->
@using (Html.BeginForm("Index", "Service", FormMethod.Get)) //Index est la méthode, Service est le controleur, searchstring est le paramètre
{
    <div class="row" align="center">
        <div class="col-md-11 offset-md-1 bordureBleue1" style="border-radius: 8px;">
            <div class="row bordureAucune">
                <div class="col-md-9 bordureAucune">
                    <div><input class="form-control" id="floatingInput" placeholder="Rechercher Demande" style=" height: 35px; width: 100%;"></div>
                </div>

                <div class="col-md-3 bordureAucune">
                    <button class="btn btn-primary btn-lg me-md-5" style="width: 100%; height: 35px; margin-top: 0px; font-size: 12px ">Rechercher</button>
                </div>
            </div>
        </div>
    </div>
}
<p class="proposition">
    <div class="row justify-content-start">
        @foreach (var service in Model)

        {


            <div class="card col-6 m-5" style="width: 18rem;">
                <a href=@("/service/ServiceDetail/"+service.Id) class="btn btn-primary stretched-link"> @service.Titre</a>

                <div class="card-body d-flex flex-column justify-content-between">

                    <div>

                        <div class="my-3">
                            <img src="@service.ImagePath" width="225" height="200" />
                        </div>
                        <h6 class="card-subtitle mb-2 text-muted">Coût du service : @service.MontantBisous</h6>
                        <h6 class="card-subtitle mb-2 text-muted">@service.TypeService</h6>
                        <p class="card-text">@service.Description</p>



                    </div>

                </div>
            </div>
        }
        <a href="/Service/Proposer">
            <svg xmlns="http://www.w3.org/2000/svg" width="160" height="160" fill="black" class="align-middle bi bi-plus" viewBox="0 0 16 16">
                <path class="plus" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" style=" color : #9AE17B" />
            </svg>
        </a>


        @*@Html.ActionLink("Proposer un nouveau service", "Proposer", "Service")*@

    </div>
