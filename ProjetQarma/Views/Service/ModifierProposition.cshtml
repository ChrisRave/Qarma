@model ProjetQarma.Models.Proposition


@{
    Layout = "_layoutAccueil";
    ViewBag.Title = "ModifierProposition";
}

 <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Modifier un service</h2>
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                @using (Html.BeginForm("ModifierProposition", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {


                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Titre, new { @class = "form-control", placeholder = "Titre " })
                        @Html.LabelFor(model => model.Titre)
                        @Html.ValidationMessageFor(model => model.Titre)
                    </div>
                    <div class="form-floating mb-3">
                        @Html.DropDownListFor(model => model.TypeService, Html.GetEnumSelectList<ProjetQarma.Models.TypeService>(), new { @class = "form-control", placeholder = "Type de service" })
                        @Html.LabelFor(model => model.TypeService)
                        @Html.LabelFor(model => model.TypeService)
                        @Html.ValidationMessageFor(model => model.TypeService)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.MontantBisous, new { @class = "form-control", placeholder = "Coût du service" })
                        @Html.LabelFor(model => model.MontantBisous)
                        @Html.ValidationMessageFor(model => model.MontantBisous)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                        @Html.LabelFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>

                    @Html.HiddenFor(model=>model.ImagePath)
                    <div class="d-flex flex-row my-3">
                        <div class="mb-3 d-flex">
                            <div>
                                @Html.LabelFor(model => model.Image, new { id = "imageLabel", @style = "text-align:center;" })
                                @Html.TextBoxFor(model => model.Image, new { placeholder = "Description", @type = "file" })

                            </div>
                        </div>
                        <div class="text-center">
                            <img src="@Model.ImagePath" height="200" width="200" />
                        </div>
                    </div>
                    <button class="btn btn-primary btn-xl" type="submit">Modifier</button>
                }
            </div>
        </div>