@model List<ProjetQarma.Models.Proposition>

@{
    Layout = "_layoutAccueil";
    ViewBag.Title = "Proposition";
}


<h3 class="titre">Page proposition</h3>
<p class="contenu">Ici c'est la page proposition</p>

<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Proposition de services</h2>
<!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
                @using (Html.BeginForm("Proposition", "Service", FormMethod.Get )) //Index est la méthode, Service est le controleur, searchstring est le paramètre
                            {
                                <div class="form-floating mb-3">
                                    @Html.TextBox( "searchString")
                                    @Html.Label("")
                                 <input type="submit" value="rechercher ">  
                                </div>
				            }
            </div>
        <p class="proposition">
            <div class="row justify-content-start">
                @foreach (var proposition in Model)
                {

                    string modifierLien = "/Service/ModifierProposition/" +proposition.Id;
                    string supprimerLien = "/Service/SupprimerProposition/" + proposition.Id;
                    <div class="card col-6 m-5" style="width: 18rem;" >
               
                        <p class="card-text">@proposition.Titre</p>
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                 <div class="my-3">
                                        <img src="@proposition.ImagePath" width="225" height="200" />
                                    </div>
                                <h6 class="card-subtitle mb-2 text-muted">Coût du service : @proposition.MontantBisous</h6>
                                <h6 class="card-subtitle mb-2 text-muted">@proposition.TypeService</h6>
                                <p class="card-text">@proposition.Description</p>
                                <a href=@modifierLien class="card-link">Modifier</a>
                                <a href=@supprimerLien class="card-link" onclick="return confirm('Confirmer la suppression')">Supprimer</a> 

                            </div>
                   
                        </div>
                    </div>
                    }


                @Html.ActionLink("Proposer un nouveau service", "Proposer", "Service")
            </div>

