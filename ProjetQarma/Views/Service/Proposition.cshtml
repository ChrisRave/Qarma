@{
    Layout = "_layoutLanding";
    ViewBag.Title = "Proposition";
}
<h3 class="titre">Page proposition</h3>
<p class="contenu">Ici c'est la page proposition</p>

<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Proposition de services</h2>
<!-- Icon Divider-->
<div class="divider-custom">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
    <div class="divider-custom-line"></div>
</div>
<p class="proposition">
    <div class="row justify-content-start">
        @foreach (var proposition in Model)
        {

            <div class="card col-6 m-5" style="width: 18rem;" >
               
               
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"> Identifiant du service : @proposition.Id</h5>

                        <h6 class="card-subtitle mb-2 text-muted">proposé par : @proposition.InfosPersosId</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Coût du service : @proposition.MontantBisous</h6>
                        <h6 class="card-subtitle mb-2 text-muted">@proposition.TypeService</h6>
                        <p class="card-text">@proposition.Description</p>
                        <a href="~/Service/PropositionDetail" class="btn btn-primary stretched-link">Accepter</a>

                    </div>

                </div>
            </div>}
        @Html.ActionLink("Proposer un nouveau service", "Proposer", "Service")
    </div>

