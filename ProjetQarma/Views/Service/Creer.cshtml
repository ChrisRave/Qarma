@model ProjetQarma.Models.Service


@{
    Layout = "_layoutProposition";
    ViewBag.Title = "Créer";
}


<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Services</h2>
<!-- Icon Divider-->
<div class="divider-custom">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
    <div class="divider-custom-line"></div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
        @using (Html.BeginForm("Creer", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
             <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Titre, new { @class = "form-control", placeholder = "Titre " })
                @Html.LabelFor(model => model.Titre)
                @Html.ValidationMessageFor(model => model.Titre)
            </div>
            <div class="form-floating mb-3">
                @Html.DropDownListFor(model => model.TypeService, Html.GetEnumSelectList<ProjetQarma.Models.TypeService>(), new { @class = "form-control", placeholder = "Type de service" })
                @Html.LabelFor(model => model.TypeService)
                @Html.ValidationMessageFor(model => model.TypeService)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.MontantBisous, new { @class = "form-control", placeholder = "Cout du service " })
                @Html.LabelFor(model => model.MontantBisous)
                @Html.ValidationMessageFor(model => model.MontantBisous)
            </div>

            <div class="form-floating mb-3">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                @Html.LabelFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>



            @Html.HiddenFor(model=> model.ImagePath)
                    <div class="d-flex flex-row my-3">
                        <div class="mb-3 d-flex">
                            <div>
                                @Html.LabelFor(model => model.Image, new { id = "imageLabel", @style = "text-align:center;" })
                                @Html.TextBoxFor(model => model.Image, new { placeholder = "Description", @type = "file" })

                            </div>
                        </div>
                       
                    </div>


            <!-- Submit Button-->
            <button class="btn btn-primary btn-xl" type="submit" href="~/Home/Landing.cshtml">Ajouter</button>
        }
    </div>
</div>

