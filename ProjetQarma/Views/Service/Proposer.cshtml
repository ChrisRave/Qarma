@model ProjetQarma.Models.Proposition


@{ Layout = "_layoutAccueil";
  ViewBag.Title = "Proposer"; }

<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Services</h2>
<!-- Icon Divider-->
<div class="divider-custom">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
    <div class="divider-custom-line"></div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">

            @using (Html.BeginForm())
            {


                <div class="form-floating mb-3">
                    @Html.TextBoxFor(model => model.TypeService, new { @class = "form-control", placeholder = "Type de service" })
                    @Html.LabelFor(model => model.TypeService)
                    @Html.ValidationMessageFor(model => model.TypeService)
                </div>

                <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.MontantBisous, new { @class = "form-control", placeholder = "Cout du service " })
                @Html.LabelFor(model => model.MontantBisous)
                @Html.ValidationMessageFor(model => model.MontantBisous)
                </div>

                <div class="form-floating mb-3">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                @Html.LabelFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
                </div> <!-- Submit Button-->

                    <button class="btn btn-primary btn-xl" type="submit" href="~/Home/Landing">Proposer</button>
            }
    </div>
</div>

