@model ProjetQarma.Models.Proposition


@{ Layout = "_layoutProposition";
    ViewBag.Title = "Proposer"; }

<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0" style="color: #1f5c587c; ">Propositions</h2>
<!-- Icon Divider-->


<div class="row justify-content-center bordureBleue1" style="border-radius: 8px;">

    @using (Html.BeginForm("Proposer", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-4 bordureAucune">
                <div class="form-floating mb-3" style=" width: 100%;">
                    @Html.TextBoxFor(model => model.Titre, new { @class = "form-control", placeholder = "Titre ", @style = " width: 100%;" })
                    @Html.LabelFor(model => model.Titre)
                    @Html.ValidationMessageFor(model => model.Titre)
                </div>
            </div>
            <div class="col-md-4 bordureAucune">

                <div class="form-floating mb-3" style=" width: 100%;">
                    @Html.DropDownListFor(model => model.TypeService, Html.GetEnumSelectList<ProjetQarma.Models.TypeService>(), new { @class = "form-control", placeholder = "Type de service" , @style = " width: 100%;" })
                    @Html.LabelFor(model => model.TypeService)
                    @Html.ValidationMessageFor(model => model.TypeService)
                </div>
            </div>
            <div class="col-md-4 bordureAucune">
                <div class="form-floating mb-3" style=" width: 100%;">
                    @Html.TextBoxFor(model => model.MontantBisous, new { @class = "form-control", placeholder = "Cout du service " , @style = " width: 100%;" })
                    @Html.LabelFor(model => model.MontantBisous)
                    @Html.ValidationMessageFor(model => model.MontantBisous)
                </div>
            </div>

        </div>
        <div class="row">

            <div class="col-md-6 bordureAucune">
                <div class="form-floating mb-3" >
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description", @style = " width: 100%;" })
                    @Html.LabelFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="col-md-6 bordureAucune">

                @Html.TextBoxFor(model => model.Image, new { placeholder = "Description", @type = "file" , @style = " width: 80%; background-color: #9AE17B;border-color: #9AE17B; border-radius: 8px;" })

            </div>
            </div>
        

        <div class="row">
            <div class="col-md-4 bordureAucune">
            </div>
            <div class="col-md-4 bordureAucune">

                <!-- Submit Button-->
                <button class="btn btn-primary btn-lg" style=" width: 100%;" onclick="location.href='@Url.Action("Demande", "Home")';">Proposer </button>
            </div>
            <div class="col-md-4 bordureAucune">
            </div>
        </div>
      }
 </div>
